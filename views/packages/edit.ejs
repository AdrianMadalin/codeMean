<% include ../../partials/header %>
    <div class='container'>
        <h3 class='align'>Edit <%= foundPackage.title%></h3>
        <div class='loginContainer'>
            <form class='form' action='/package/<%= foundPackage._id %>?_method=PUT' method='POST'>
                <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon" id="basic-addon1">Title</span>
                      <input type="text" class="form-control" name='title' value='<%= foundPackage.title%>' aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon" id="basic-addon1">....</span>
                      <input type="textarea" name='shortDescription' class="form-control" value='<%= foundPackage.shortDescription%>' aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group">
                      <span class="input-group-addon" id="basic-addon1">Image: </span>
                      <input type="file" name='image' aria-describedby="basic-addon1">
                 </div>
                <div class="form-group">
                    <div class="input-group">
                       <input type="submit" class="btn btn-primary" aria-describedby="basic-addon1">   
                    </div>
                </div>
            </form>
        </div>
    </div>
<% include ../../partials/footer %>